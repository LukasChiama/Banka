{
  "name": "server",
  "version": "1.0.0",
  "description": "A restful API for Banka app",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ]
  },
  "scripts": {
    "test": "npm run dbtest && nyc mocha --timeout 1000000 --exit ./server/tests/**/*.js || true",
    "start": "npm run build && node build/index.js",
    "startDev": "nodemon --exec babel-node server/index.js",
    "build": "npm run clean && babel server --out-dir build",
    "clean": "rm -rf build",
    "migrations": "babel-node server/database/droptables && babel-node server/database/createtables",
    "seed": "babel-node server/database/seed",
    "dbtest": "npm run migrations && npm run seed",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "author": "Team 2",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.1.1",
    "pg": "^7.10.0",
    "validatorjs": "^3.15.1"
  },
  "devDependencies": {
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^14.1.1"
  }
}
